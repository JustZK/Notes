<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#11000000"
    tools:context="com.example.zk.notes.drawable.DrawableActivityFive">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:orientation="horizontal">

        <Button
            android:id="@+id/drawable_five_anim_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="50%"
            android:gravity="center"
            android:background="@drawable/bg_btn"
            android:text="裁剪幅度"/>

        <Button
            android:id="@+id/drawable_five_anim_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="50%"
            android:gravity="center"
            android:background="@drawable/bg_btn"
            android:text="裁剪幅度"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <ImageView
        android:id="@+id/drawable_five_iv_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/xiaohuangren"/>

</com.zhy.android.percent.support.PercentLinearLayout>
